#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

void main()

{
    float a,b,c,x1,x2,x,D;
	cout<<"ingrese a: ";
	cin>>a;
	cout<<"ingrese b: ";
	cin>>b;
	cout<<"ingrese c: ";
	cin>>c;
	if (a !=0)
	{
		D=b*b-4*a*c; // pow(b,2)-4*a*c solo con Math
		if (D>0)
			//ingresa por verdad
		{
			x1=(-b+sqrt(D))/(2*a);
			x2=(-b-sqrt(D))/(2*a);
			cout<<"soluciones reales x1: "<<x1<<" x2: "<<x2;
		}
		else
			//ingrese por falso
			if (D==0)
				cout<<"solucion unica: "<<(-b)/(2*a); 
			else
				cout<<"soluciones imaginarias";
	}
		getch();


}
